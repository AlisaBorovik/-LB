
#include <iostream>
using namespace std;

// Структура для часу
struct Time {
    int hours = 0;
    int minutes = 0;
};

int main() {
    Time t;
    int passMinutes;

    cout << "Enter hours (0-23): ";
    cin >> t.hours;
    if (t.hours < 0 || t.hours >= 24) {
        cout << "Invalid hours!" << endl;
        return 1;
    }

    cout << "Enter minutes (0-59): ";
    cin >> t.minutes;
    if (t.minutes < 0 || t.minutes >= 60) {
        cout << "Invalid minutes!" << endl;

    }

    cout << "Enter passed minutes: ";
    cin >> passMinutes;
    if (passMinutes < 0) {
        cout << "Invalid minutes!" << endl;
        return 1;
    }

    int totalMinutes = t.hours * 60 + t.minutes + passMinutes;


    t.hours = (totalMinutes / 60) % 24;
    t.minutes = totalMinutes % 60;


    cout << t.hours << ":" << (t.minutes < 10 ? "0" : "") << t.minutes << endl;

    return 0;
}

