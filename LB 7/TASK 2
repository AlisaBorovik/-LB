
#include <iostream>
using namespace std;

int main(void) {
    double pi4 = 0.;
    long n;
    cout << "Number of iterations? ";
    cin >> n;
    double sign = 1.0;
    for(long i = 0; i < n; i++) {
        pi4 += sign / (2.0 * i + 1.0);
        sign = -sign;
    }

    cout.precision(20);
    cout << "Pi = " << (pi4 * 4.) << endl;
    return 0;
}



3.
#include <iostream>
using namespace std;

int main() {
    int n;
    cin >> n;

    if (n <= 1) {
        cout << "Sorry, the side size must be greater than 1";
        return 0;
    }

    cout << '+';
    for(int i = 0; i < n; i++) cout << '-';
    cout << "+\n";

    for(int i = 0; i < n; i++) {
        cout << '|';
        for(int j = 0; j < n; j++) cout << ' ';
        cout << "|\n";
    }

    cout << '+';
    for(int i = 0; i < n; i++) cout << '-';
    cout << "+\n";

    return 0;
}

