
#include <iostream>
using namespace std;

int main() {
    const int m = 4;
    const int n = 7;
    int a[m][n];

    cout << "Enter elements of 4x7 array:" << endl;
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            cin >> a[i][j];
        }
    }

    int minVal = a[0][0];
    int minRow = 0;
    int minCol = 0;

    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            if (a[i][j] < minVal) {
                minVal = a[i][j];
                minRow = i;
                minCol = j;
            }
        }
    }

    cout << "Minimum element: " << minVal << endl;
    cout << "Position: row " << minRow << ", column " << minCol << endl;

    return 0;
}


