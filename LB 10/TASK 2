#include <iostream>
using namespace std;

int main() {
    const int m = 6;
    const int n = 4;
    int a[m][n];

    cout << "Enter elements of 6x4 array:" << endl;
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            cin >> a[i][j];
        }
    }

    for (int j = 0; j < n; j++) {
        int count = 0;
        for (int i = 0; i < m; i++) {
            if (a[i][j] % 2 == 0) {
                count++;
            }
        }
        cout << "Column " << j << " has " << count << " even numbers." << endl;
    }

    return 0;
}

