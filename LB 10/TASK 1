#include <iostream>
using namespace std;

int main() {
    const int m = 4; //ряд
    const int n = 3; //стовпець
    int a[m][n];

    cout << "Enter elements of 4x3 array:" << endl;
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            cin >> a[i][j]; //i ряд - j цифри у - ньому
        }
    }

    for (int i = 0; i < m; i++) {
        int count = 0;
        for (int j = 0; j < n; j++) {
            if (a[i][j] % 2 == 0) {
                count++;
            }
        }
        cout << "Row " << i << " has " << count << " even numbers." << endl;
    }

    return 0;
}

