#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    const int m = 10;
    int a[m];

    srand(time(0));


    for (int i = 0; i < m; i++) {
        a[i] = rand() % 10;
    }

    cout << "Generated array: ";
    for (int i = 0; i < m; i++) {
        cout << a[i] << " ";
    }
    cout << endl;

    int index = -1;
    for (int i = 0; i < m; i++) {
        if (a[i] == 0) {
            index = i;
        }
    }

    if (index != -1) {
        cout << "Index of first zero element: " << index << endl;
    } else {
        cout << "Array does not contain zero elements." << endl;
    }

    return 0;
}

